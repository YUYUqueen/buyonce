---
import { categories } from '../lib/categories';

interface Props {
  current?: string;
}

const { current } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  <a
    href="/"
    class:list={[
      'px-3 py-1.5 rounded-full text-sm font-medium transition-colors',
      !current ? 'bg-stone-900 text-white' : 'bg-stone-100 text-stone-600 hover:bg-stone-200',
    ]}
  >
    All
  </a>
  {Object.entries(categories).map(([slug, { label, emoji }]) => (
    <a
      href={`/category/${slug}`}
      class:list={[
        'px-3 py-1.5 rounded-full text-sm font-medium transition-colors',
        current === slug ? 'bg-stone-900 text-white' : 'bg-stone-100 text-stone-600 hover:bg-stone-200',
      ]}
    >
      {emoji} {label}
    </a>
  ))}
</div>
